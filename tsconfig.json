{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "index.ts", "migration.ts"],
    "exclude": ["node_modules", "dist"]
}
